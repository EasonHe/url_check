# -----------------------------------------------------------------------------
# URL Check runtime environment example
# Copy this file to .env.local (recommended) or .env, then update values.
# Priority in dev.sh: .env.local > .env > system env
# -----------------------------------------------------------------------------

# Global alert switches
URL_CHECK_ENABLE_ALERTS=true
URL_CHECK_ENABLE_DINGDING=true
URL_CHECK_ENABLE_MAIL=false

# Local web listen port for `python url_check.py`
URL_CHECK_PORT=4000

# DingTalk config
URL_CHECK_DINGDING_WEBHOOK=https://oapi.dingtalk.com/robot/send?
URL_CHECK_DINGDING_ACCESS_TOKEN=REPLACE_WITH_ACCESS_TOKEN

# Mail receivers (comma-separated)
URL_CHECK_MAIL_RECEIVERS=ops@example.com

# Local data retention
URL_CHECK_HISTORY_DATA_DAYS=3

# Alert log
URL_CHECK_ALERT_LOG_ENABLED=true
URL_CHECK_ALERT_LOG_RETENTION_DAYS=30

# Summary report
URL_CHECK_REPORT_ENABLED=true
URL_CHECK_REPORT_INTERVAL_HOURS=2
URL_CHECK_REPORT_DINGDING_ENABLED=true
URL_CHECK_REPORT_MAIL_ENABLED=false

# Strict config validation (true = fail-fast on missing required vars)
URL_CHECK_STRICT_CONFIG=false
